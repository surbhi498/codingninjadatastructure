int staircase(int n){
    /* Don't write main().
     *  Don't read input, it is passed as function argument.
     *  Return output and don't print it.
     *  Taking input and printing output is handled automatically.
     */
int t; 
    
if(n==1){
    
return 1;    
    
} 
else if(n<-1){
    
return 0;    
    
} 
  
else if(n==0){
    
 return 1;   
    
}    
else{
    
int x = staircase(n-1);    
int y = staircase(n-2);    
int z = staircase(n-3);    
 t = (x+y+z);    
    
}
    
return t;    
    
}
