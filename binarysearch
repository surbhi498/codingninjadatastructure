// arr - input array
// n - size of array
// val - element to be searched
#include <cmath>
int BinarySearch(int arr[], int n, int val){	
int i =0;
int j = n-1;
while(i<=j){
    
int mid = int((i+j)/2);
if(val == arr[mid]){
    
return mid;    
    
    
}    
    
else if(val<arr[mid]){
j= mid - 1;    
    
    
}    
    
else if(arr[mid]<val){
    
i = mid + 1;    
    
    
    
}    
    
//return -1;    
    
    
}    
return -1;	

}
